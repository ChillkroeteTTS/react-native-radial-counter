{
    "compilerOptions": {
        "outDir": "./built",
        "target": "es5",
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "jsx": "react-native",
        "moduleResolution": "node",
        "skipLibCheck": true,
        "lib": ["es6"]
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "./built",
        "./node_modules"
    ]
}